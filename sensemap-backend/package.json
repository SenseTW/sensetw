{
  "name": "sensemap-backend",
  "version": "0.0.1",
  "description": "SenseMap backend server",
  "main": "dist/index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "knex": "knex",
    "build": "rimraf dist && tsc",
    "prestart": "yarn build",
    "start": "node dist",
    "dev": "nodemon --watch src --ext 'ts tsx' --exec ts-node src",
    "debug": "nodemon --inspect-brk --watch src --ext ts --exec ts-node src",
    "test": "jest --runInBand",
    "test:watch": "yarn test --watch",
    "test:coverage": "yarn test --coverage",
    "dbms:verify": "node verify_db_connection.js",
    "db:migrate": "node bin/migrate.js",
    "db:create": "node create_database.js"
  },
  "author": "Pomin Wu <pomin5@gmail.com> (https://github.com/pm5)",
  "license": "MIT",
  "devDependencies": {
    "@types/connect-flash": "^0.0.34",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/express-oauth-server": "^2.0.0",
    "@types/graphql": "^0.13.1",
    "@types/knex": "^0.14.14",
    "@types/node": "^8.10.18",
    "@types/passport": "^0.4.5",
    "@types/passport-anonymous": "^1.0.3",
    "@types/passport-http-bearer": "^1.0.33",
    "@types/passport-local": "^1.0.33",
    "@types/ramda": "^0.25.32",
    "@types/react": "^16.3.17",
    "@types/react-dom": "^16.0.6",
    "@types/supertest": "^2.0.4",
    "dotenv": "^6.0.0",
    "jest": "^23.1.0",
    "node-pg-migrate": "^3.5.0",
    "nodemon": "^1.17.5",
    "rimraf": "^2.5.4",
    "ts-jest": "^22.4.6",
    "ts-node": "^6.1.2",
    "typescript": "^2.9.1"
  },
  "dependencies": {
    "apollo-server": "^2.0.5",
    "apollo-server-express": "^2.0.4",
    "async-file": "^2.0.2",
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "ejs": "^2.6.1",
    "express": "^4.16.3",
    "express-oauth-server": "^2.0.0",
    "express-promise-router": "^3.0.2",
    "express-session": "^1.15.6",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.9.2",
    "isemail": "^3.1.3",
    "knex": "^0.14.6",
    "passport": "^0.4.0",
    "passport-anonymous": "^1.0.1",
    "passport-http-bearer": "^1.0.1",
    "passport-local": "^1.0.0",
    "pg": "^7.4.3",
    "ramda": "^0.25.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "semantic-ui-react": "^0.81.1",
    "supertest": "^3.1.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
